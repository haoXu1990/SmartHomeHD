  pod 'Moya/RxSwift', '~> 11.0'
  pod 'Moya-ObjectMapper/RxSwift'
  pod 'ReactorKit'
  pod 'RxSwiftExt'
  pod 'RxOptional'
  pod 'RxViewController'
  pod 'SectionReactor'
  pod 'Then'
  
  # UI
  # 布局
  pod 'SnapKit'
  # 简化 Cell 注册
  pod 'ReusableKit'
  
  #pod 'Segmentio', '~> 3.3'
  
  # 分段选择器
  pod 'HMSegmentedControl'
  
  # 一款按钮的扩展控件，改变图片和titile的位置
  pod 'UIButton-SSEdgeInsets', '~> 0.1.1'
  # UserDefaults
  pod 'SwiftyUserDefaults', '~> 4.0'
  
  # 提示框
  pod 'Toaster'
  
  pod 'YPImagePicker'
  pod 'MMPhotoPicker'
  
  # Socket.IO 
 # pod 'Socket.IO-Client-Swift', '~> 15.1.0'
  # WebSocket
  #pod 'Starscream', '~> 3.0.6'
 
  # 自定义 Switch
  pod 'RoundedSwitch'
  pod 'SwiftDate', '~> 5.0'
  # 二维码识别，生成工具, 原作者没更新了,
  pod 'swiftScan', :git => "https://github.com/MxABC/swiftScan.git", :commit =>"b6c5b1c"
  # log 工具
  pod 'CocoaLumberjack/Swift'
  pod 'FilesProvider'
  # 第三方集成
  # 荧石云摄像头SDK
  pod 'EZOpenSDK'
 
 
  # Pods for SmartHomeHD

  target 'SmartHomeHDTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'SmartHomeHDUITests' do
    inherit! :search_paths
    # Pods for testing
  end

